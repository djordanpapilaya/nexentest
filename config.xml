<?xml version='1.0' encoding='utf-8'?>
<widget id="com.exterion.exterionnews" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Exterion News</name>
    <description>
        An Exterion Media application that is created to provide news and setup tests with beacons.
    </description>
    <author email="0874349@hr.nl" href="http://cordova.io">
        The Exterion DEV Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <config-file parent="UIStatusBarHidden" platform="ios" target="*-Info.plist">
            <true />
        </config-file>
        <config-file parent="UIViewControllerBasedStatusBarAppearance" platform="ios" target="*-Info.plist">
            <false />
        </config-file>
    </platform>
    <engine name="browser" spec="^5.0.1" />
    <engine name="ios" spec="^4.5.2" />
    <engine name="android" spec="^6.3.0" />
    <plugin name="cordova-plugin-nexen-sdk" spec="file:///Users/djordanpapilaya/afstudeer-tech-projecten/cordovaplugin">
        <variable name="APP_PASSWORD" value="VLLdDyt3ZT2yYwrb3qUTPV6Ata95PzQR" />
        <variable name="APP_NAME" value="ExterionNewsApp" />
        <variable name="LOCATION_USAGE_DESCRIPTION" value="This app uses your location to track beacons." />
        <variable name="BLUETOOTH_USAGE_DESCRIPTION" value="Please allow to use Bluetooth to start beacon monitoring" />
    </plugin>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-console" spec="^1.1.0" />
    <plugin name="cordova-custom-config" spec="^4.0.2" />
    <plugin name="cordova-plugin-dialogs" spec="^1.3.3" />
